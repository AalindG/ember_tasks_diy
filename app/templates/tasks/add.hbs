<form>
  <div class="form-group">
    <label class="col-form-label col-md-6">Title</label>
    {{input type="text" class="form-control" value=title placeholder="Add a Task.."}}
  </div>
  <div class="form-group">
    <label class="col-form-label col-md-6">Due Date</label>
    {{input type="date" class="form-control" value=date placeholder="mm/dd/yyyy"}}
  </div>
  <div class="form-group">
  	<label class="col-form-label col-md-6">Desciption</label>
  	{{textarea type="text" class="form-control" value=describe placeholder="Description"}}
  </div>
  <div><button {{action 'addTask'}} class="btn btn-primary">
    Submit
  </button></div>
</form>